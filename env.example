# Application
SPRING_PROFILES_ACTIVE=prod
PORT=8081
SERVER_ADDRESS=\\.\pipe\ntu-cms

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=cms
DB_USERNAME=root
DB_PASSWORD=root

# JWT
JWT_SECRET=9a4f2c8d3b7a1e6f45c8a0b3f267d8b1d4e6f3c8a9d2b5f8e3a7c4d9f2e5b8a
JWT_EXPIRATION=86400000

# Security
REMEMBER_ME_KEY=changeThisKeyInProduction
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# SSL/TLS
SSL_ENABLED=false
SSL_KEYSTORE=classpath:keystore/cms.p12
SSL_KEYSTORE_PASSWORD=your-keystore-password
SSL_KEYSTORE_TYPE=PKCS12
SSL_KEY_ALIAS=cms

# File Upload
UPLOAD_DIR=uploads/

# Logging
LOG_FILE=logs/cms.log

# Monitoring
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=never

# Cache
SPRING_CACHE_TYPE=caffeine
SPRING_CACHE_CAFFEINE_SPEC=maximumSize=10000,expireAfterWrite=3600s

# Database Connection Pool
SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE=5
SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE=20
SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT=300000
SPRING_DATASOURCE_HIKARI_MAX_LIFETIME=1200000
SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT=20000

# Password Policy
APP_SECURITY_PASSWORD_STRENGTH_MIN_LENGTH=8
APP_SECURITY_PASSWORD_STRENGTH_REQUIRE_UPPERCASE=true
APP_SECURITY_PASSWORD_STRENGTH_REQUIRE_LOWERCASE=true
APP_SECURITY_PASSWORD_STRENGTH_REQUIRE_DIGIT=true
APP_SECURITY_PASSWORD_STRENGTH_REQUIRE_SPECIAL=true

# Account Lockout
APP_SECURITY_ACCOUNT_LOCKOUT_MAX_ATTEMPTS=5
APP_SECURITY_ACCOUNT_LOCKOUT_DURATION=15m

# Session
SPRING_SESSION_TIMEOUT=30m
SERVER_SERVLET_SESSION_COOKIE_SECURE=true
SERVER_SERVLET_SESSION_COOKIE_HTTP_ONLY=true
SERVER_SERVLET_SESSION_COOKIE_SAME_SITE=strict 